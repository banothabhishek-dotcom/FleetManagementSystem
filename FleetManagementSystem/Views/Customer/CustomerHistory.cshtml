
@model List<FleetManagementSystem.Models.Trip_Scheduling>

@{
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
    ViewData["Title"] = "Fleet History";
}

    
@if (Model != null && Model.Any())
{
    @foreach (var trip in Model)
    {
        <div class="card mb-3">
            <div class="card-header d-flex justify-content-between align-items-center bg-info">
                <span class="text-dark">@trip.BookingTime.ToString("dd MMMM yyyy")</span>
                <span class="badge @(trip.Status == "Pending" ? "bg-warning text-dark" : "bg-success")">
                    @trip.Status
                </span>
            </div>



            <div class="card-body py-3">
                <div class="pickup my-3">
                    <h5 class="card-title"><i class="fa-solid fa-circle"></i> Pickup Point</h5>
                    <p class="card-text">@trip.PickupPoint </p>
                </div>

                <div class="drop my-4">
                    <h5 class="card-title"><i class="fa-solid fa-location-dot"></i> Drop Point</h5>
                    <p class="card-text">@trip.DropPoint </p>
                </div>
            </div>
        </div>
    }
} else
{
    <div class="container " style="margin-top:100px">
        <div class="card shadow border-0 ">
            <div class="card-body text-center py-5">
                <h4 class="text-muted">
                    <i class="fa-solid fa-truck-fast me-2"></i> No fleet history available
                </h4>
                <p class="text-secondary">You haven't booked any fleet yet. Start your journey by booking one now!</p>
                <a asp-action="CustomerPage" asp-controller="Customer" class="btn btn-outline-primary mt-3">
                    Book a Fleet
                </a>
            </div>
        </div>
    </div>

}




   
