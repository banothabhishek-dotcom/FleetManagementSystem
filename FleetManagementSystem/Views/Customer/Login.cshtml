@model FleetManagementSystem.Models.LoginDto

@{
    ViewData["Title"] = "Login";
}



@* Custom CSS *@
<link href="/css/Login.css" rel="stylesheet" />

<div>
    <!-- Login page -->

                <div class="card login-card p-4 shadow-sm">
                    <h2 class="mb-4 text-center">Login Page</h2>
                   

<form asp-action="Login" asp-controller="Customer" method="post" id="loginForm">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" class="form-control" placeholder="Enter your email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Password" class="form-label">Password</label>
        <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary w-100">Submit</button>

    <div class="row text-center">
        <div class="col-6">
            <h6 class="mt-3">
                New User?
                <a asp-controller="Customer" asp-action="Registration" class="text-decoration-none">Register</a>
            </h6>
        </div>
        <div class="col-6">
            <h6 class="mt-3">
                <a href="#" class="text-decoration-none text-dark">Forgot Password</a>
            </h6>
        </div>
    </div>
</form>

                </div>
</div>


