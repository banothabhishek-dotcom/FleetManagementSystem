@model IEnumerable<FleetManagementSystem.Models.Trip_Scheduling>;

@{
    ViewData["Title"] = "TripScheduling";
}
<head>
  
    <style>
        .card {
            margin-bottom: 20px;
        }

        .details {
            display: none;
            margin-top: 10px;
        }

        .btn-custom {
            background-color: #0d6efd;
            color: white;
        }

            .btn-custom:hover {
                background-color: #0b5ed7;
            }

            .btn-custom:hover {
                background-color: #0b5ed7;
            }

        .dropdown:hover .dropdown-menu {
            display: block;
            margin-top: 0;
        }

        .dropdown-menu {
            min-width: 140px;
            right: 0;
            left: auto;
        }
    </style>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>

<body>

    <!-- 🌐 Navbar -->
    <nav class="navbar navbar-expand-lg p-0 navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand my-2 text-white" asp-controller="Admin" asp-action="AdminPage"><i class="fa-solid fa-truck"></i> Fleetora</a>
            <div class="collapse navbar-collapse justify-content-end">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link active" asp-controller="TripScheduling" asp-action="Trip_Scheduling">Home</a></li>
                    <li class="nav-item"><a class="nav-link active" asp-controller="TripScheduling" asp-action="TripHistory" >History</a></li>
                </ul>
            </div>
        </div>  <div class="dropdown">
            <a class="nav-link mx-2 text-white" style="cursor: pointer;">
                <i class="fa-solid fa-user"></i>
            </a>
            <ul class="dropdown-menu dropdown-menu-end">
                <li>
                    <form asp-controller="PerformanceAnalysis" asp-action="Logout" method="post" class="dropdown-item p-0">
                        <button type="submit" class="btn text-danger w-100 text-start">
                            <i class="fa-solid fa-right-from-bracket me-2"></i> Logout
                        </button>
                    </form>
                </li>
            </ul>
        </div>
    </nav>
    <div class="text-start mt-3 ms-3">
        <a asp-controller="Admin" asp-action="AdminPage" type="back" class="btn btn-custom">Back</a>
    </div>

    <!-- 🚗 Ride Bookings -->
    <div id="booking-view" class="container">
        <h2 class="mb-4 text-center">Ride Bookings</h2>

        <!-- Booking Cards -->
        @foreach (var entry in Model)
        {
            <form method="post" asp-controller="TripScheduling" asp-action="AssignDriver">
                <div class="card border-info shadow-sm booking-card">
                    <div class="card-body">
                        <p class="card-title"><strong>Name:</strong> @(entry.Firstname + " " + entry.Lastname)</p>
                        <p><strong>Pickup:</strong> @entry.PickupPoint</p>
                        <p><strong>Drop:</strong> @entry.DropPoint</p>
                        <p><strong>Booking Time:</strong> @entry.BookingTime</p>
                        <p><strong>Vehicle Type:</strong> @entry.VehicleType</p>

                        <input type="hidden" name="tripId" value="@entry.TripId" />
                        <input type="hidden" name="vehicleType" value="@entry.VehicleType" />

                        <div class="mb-3">
                            <label class="form-label"><strong>Assign Driver:</strong></label>
                            <select class="form-select driver-select" name="driverName" required>
                                <option value="">-- Select Driver --</option>
                                @{
                                    int requiredCapacity = entry.VehicleType switch
                                    {
                                        "4Wheeler" => 5,
                                        "6Wheeler" => 7,
                                        "10Wheeler" => 9,
                                        _ => 0
                                    };

                                    var filteredDrivers = (ViewBag.AvailableVehicles as List<FleetManagementSystem.Models.Vehicle_Management>)
                                    .Where(v => v.Capacity == requiredCapacity)
                                    .Select(v => v.DriverName)
                                    .ToList();

                                    foreach (var driver in filteredDrivers)
                                    {
                                        <option value="@driver">@driver</option>
                                    }
                                }
                            </select>
                        </div>


                        <button type="submit" class="btn btn-success mt-3 accept" disabled>Accept</button>
                        <button type="button" class="btn btn-danger mt-3 decline" data-trip-id="@entry.TripId">Decline</button>

                    </div>
                </div>
            </form>

        }

    </div>


    <!-- 💡 jQuery Logic -->
    <script>
        $('.view-more').on('click', function () {
          const cardBody = $(this).closest('.card-body');
          const details = cardBody.find('.details');

          details.slideToggle();
          $(this).text(function (_, text) {
            return text === 'View More' ? 'View Less' : 'View More';
          });
        });

        $('.driver-select').on('change', function () {
          const card = $(this).closest('.booking-card');
         // const vehicle = card.find('.vehicle-select').val();
          const driver = card.find('.driver-select').val();
          const acceptBtn = card.find('.accept');
          acceptBtn.prop('disabled', !( driver));
        });

              $('.accept').on('click', function () {
            const card = $(this).closest('.booking-card');
            const name = card.find('.card-title').text();
            const driver = card.find('.driver-select').val();
            const acceptedAt = new Date().toLocaleString();

            alert(`Accepted booking for ${name} driven by ${driver} at ${acceptedAt}`);
            card.slideUp(400, function () {
                $(this).remove();
            });
        });


        $('.decline').on('click', function () {
            const card = $(this).closest('.booking-card');
            const tripId = $(this).data('trip-id');

            $.post('/TripScheduling/DeclineTrip', { tripId: tripId }, function () {
                card.slideUp(400, function () {
                    $(this).remove();
                });
            });
        });

    </script>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

