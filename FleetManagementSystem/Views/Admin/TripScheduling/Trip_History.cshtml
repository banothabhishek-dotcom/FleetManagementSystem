@model IEnumerable<FleetManagementSystem.Models.Trip_Scheduling>

@{
    ViewData["Title"] = "Trip History";
}
<style>
    .dropdown:hover .dropdown-menu {
        display: block;
        margin-top: 0;
    }

    .dropdown-menu {
        min-width: 140px;
        right: 0;
        left: auto;
    }
</style>
<div>
    <nav class="navbar navbar-expand-lg p-0 navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand my-2 text-white" asp-controller="Admin" asp-action="AdminPage"><i class="fa-solid fa-truck"></i> Fleetora</a>
            <div class="collapse navbar-collapse justify-content-end">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link active" asp-controller="TripScheduling" asp-action="Trip_Scheduling">Home</a></li>
                    <li class="nav-item"><a class="nav-link active" asp-controller="TripScheduling" asp-action="Trip_History">History</a></li>
                    <li class="nav-item">

                        <div class="dropdown">
                            <a class="nav-link mx-2 text-white" style="cursor: pointer;">
                                <i class="fa-solid fa-user"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <form asp-controller="FuelManagement" asp-action="Logout" method="post" class="dropdown-item p-0">
                                        <button type="submit" class="btn text-danger w-100 text-start">
                                            <i class="fa-solid fa-right-from-bracket me-2"></i> Logout
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                       
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container py-5" style=" margin-top:40px">
        <h2 class="text-center text-primary mb-4">Accepted Bookings</h2>

        @if (Model != null && Model.Any())
        {
            <table class="table table-bordered table-striped" id="bookingTable">
                <thead class="table-dark">
                    <tr>
                        <th>S.No</th>
                        <th>Name</th>
                        <th>Phone</th>
                        <th>Vehicle</th>
                        <th>Driver</th>
                        <th>Pickup</th>
                        <th>Drop</th>
                        <th>Time</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int serialNumber = 1;
                    }

                    @foreach (var entry in Model)
                    {
                        string stat = !string.IsNullOrEmpty(entry.AssignedDriver) && entry.AssignedDriver == "Declined"
                        ? "Declined"
                        : "Accepted";

                        <tr>
                            <td>@serialNumber</td>
                            <td>@(entry.Firstname + " " + entry.Lastname)</td>
                            <td>@entry.PhoneNumber</td>
                            <td>@entry.VehicleType</td>
                            <td>@entry.AssignedDriver</td>
                            <td>@entry.PickupPoint</td>
                            <td>@entry.DropPoint</td>
                            <td>@entry.BookingTime.ToString("yyyy-MM-dd hh:mm tt")</td>
                            <td>@stat</td>
                        </tr>
                        serialNumber++;
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="card shadow border-0">
                <div class="card-body text-center py-5">
                    <h4 class="text-muted">
                        <i class="fa-solid fa-road-circle-xmark me-2"></i> No trip history available
                    </h4>
                    <p class="text-secondary">You haven't completed any trips yet. Once you do, your history will appear here.</p>
                    <a asp-action="CustomerPage" asp-controller="Customer" class="btn btn-outline-primary mt-3" >
                        Book a Trip
                    </a>
                </div>
            </div>
        }
    </div>
</div>
