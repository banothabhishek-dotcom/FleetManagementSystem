@model FleetManagementSystem.Models.Vehicle_Management

@{
    ViewData["Title"] = "Delete_Vehicle";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card p-4">
                <div class="card-body">
                    <h3 class="card-title mb-4 text-center text-primary">Vehicle Details</h3>

                    <form asp-action="Delete_Vehicle"  class="text-danger">
                        <input type="hidden" asp-for="VehicleId" />


                        <!-- Registration Number -->
                        <div class="mb-3">
                            <label asp-for="RegistrationNumber" class="form-label"></label>
                            <input asp-for="RegistrationNumber" class="form-control" maxlength="50" required />
                            <span asp-validation-for="RegistrationNumber" class="text-danger"></span>
                        </div>

                        <!-- Capacity -->
                        <div class="mb-3">
                            <label asp-for="Capacity" class="form-label"></label>
                            <input asp-for="Capacity" class="form-control" min="1" required />
                            <span asp-validation-for="Capacity" class="text-danger"></span>
                        </div>

                        <!-- Status -->
                        <div class="mb-3">
                            <label asp-for="Status" class="form-label"></label>
                            <input asp-for="Status" class="form-control" maxlength="50" required />
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                        <!-- Driver Name -->
                        <div class="mb-3">
                            <label asp-for="DriverName" class="form-label"></label>
                            <input asp-for="DriverName" class="form-control" maxlength="50" required />
                            <span asp-validation-for="DriverName" class="text-danger"></span>
                        </div>

                        <!-- Driver Phone Number -->
                        <div class="mb-4">
                            <label asp-for="DriverPhone" class="form-label"></label>
                            <input asp-for="DriverPhone" class="form-control" pattern="^\d{10}$" required />
                            <span asp-validation-for="DriverPhone" class="text-danger"></span>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid">
                            <button type="submit" value="Save" class="btn btn-danger btn-lg">Delete</button>
                            <a asp-controller="VehicleManagement" asp-action="Vehicle_Management" class="btn btn-danger">Cancel</a></a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
