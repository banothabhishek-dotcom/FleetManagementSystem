@model FleetManagementSystem.Models.Vehicle_Management

@{
    ViewData["Title"] = "Edit_Vehicle";
}
<head>
    <style>
        .dropdown:hover .dropdown-menu {
            display: block;
            margin-top: 0;
        }

        .dropdown-menu {
            min-width: 140px;
            right: 0;
            left: auto;
        }
    </style>
</head>

<nav id="navBar" class="navbar navbar-expand-lg p-0 bg-dark navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand my-2 text-white" asp-controller="Admin" asp-action="AdminPage" id="logo"> <i class="fa-solid fa-truck"></i> Fleetora</a>

        <!-- Toggler added here -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>

    <div class="dropdown">
        <a class="nav-link mx-2 text-white" style="cursor: pointer;">
            <i class="fa-solid fa-user"></i>
        </a>
        <ul class="dropdown-menu dropdown-menu-end">
            <li>
                <form asp-controller="PerformanceAnalysis" asp-action="Logout" method="post" class="dropdown-item p-0">
                    <button type="submit" class="btn text-danger w-100 text-start">
                        <i class="fa-solid fa-right-from-bracket me-2"></i> Logout
                    </button>
                </form>
            </li>
        </ul>
    </div>
</nav>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="text-start mt-3 mb-3">
            <a asp-action="Vehicle_Management" asp-controller="VehicleManagement" class="btn btn-primary">
                Back
            </a>
        </div>
        <div class="col-md-8 col-lg-6">
            <div class="card p-4">
                <div class="card-body">
                    <h3 class="card-title mb-4 text-center text-primary">Vehicle Details</h3>

                    <form asp-action="Edit_Vehicle"  asp-validation-summary="ModelOnly" class="text-danger">
                        <input type="hidden" asp-for="VehicleId" />


                        <!-- Registration Number -->
                        <div class="mb-3">
                            <label asp-for="RegistrationNumber" class="form-label"></label>
                            <input asp-for="RegistrationNumber" class="form-control" maxlength="50" required />
                            <span asp-validation-for="RegistrationNumber" class="text-danger"></span>
                        </div>

                        <!-- Capacity -->
                        <div class="mb-3">
                            <label asp-for="Capacity" class="form-label"></label>
                            <input asp-for="Capacity" class="form-control" min="1" required />
                            <span asp-validation-for="Capacity" class="text-danger"></span>
                        </div>

                        <!-- Status -->
                        <div class="mb-3">
                            <label asp-for="Status" class="form-label"></label>
                            <input asp-for="Status" class="form-control" maxlength="50" required />
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                        <!-- Driver Name -->
                        <div class="mb-3">
                            <label asp-for="DriverName" class="form-label"></label>
                            <input asp-for="DriverName" class="form-control" maxlength="50" required />
                            <span asp-validation-for="DriverName" class="text-danger"></span>
                        </div>

                        <!-- Driver Phone Number -->
                        <div class="mb-4">
                            <label asp-for="DriverPhone" class="form-label"></label>
                            <input asp-for="DriverPhone" class="form-control" pattern="^\d{10}$" required />
                            <span asp-validation-for="DriverPhone" class="text-danger"></span>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid">
                            <button type="submit" value="Save" class="btn btn-primary btn-lg">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
