@model List<FleetManagementSystem.Models.Maintenance_Management>

@{
    ViewData["Title"] = "Maintenance Tracking";
}

<head>
    <style>
        body {
            background-color: #f8f9fa;
        }

        .card {
            margin-top: 20px;
        }

        .btn-custom {
            background-color: #0d6efd;
            color: white;
        }

            .btn-custom:hover {
                background-color: #0b5ed7;
            }

        .pagination .active .page-link {
            background-color: #0d6efd;
            border-color: #0d6efd;
            color: white;
        }
    </style>
</head>

<div>

    <!--navbar-->

    <nav id="navBar" class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Admin" asp-action="AdminPage" id="logo">Fleetora</a>

            <!-- Toggler added here -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                    aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>

        <div class="dropdown">
<a class="nav-link mx-2 text-white" asp-controller="Customer" asp-action="CustomerProfile" style="cursor: pointer;">
<i class="fa-solid fa-user"></i>
</a>
<ul class="dropdown-menu dropdown-menu-end">
<li>
<form asp-controller="Customer" asp-action="Logout" method="post" class="dropdown-item p-0">
<button type="submit" class="btn text-danger w-100 text-start">
<i class="fa-solid fa-right-from-bracket me-2"></i> Logout
</button>
</form>
</li>
</ul>
</div>
    </nav>

    <div class="text-start mt-3 ms-3">
        <a asp-controller="Admin" asp-action="AdminPage" type="back" class="btn btn-custom">Back</a>
    </div>
    <div class="container ">
        <h2 class="mb-7 text-center header-title">
            <medium>Maintenance Tracking</medium>
        </h2>
    </div>
    @if (ViewBag.SearchPerformed == true)
    {
        <div class="text-start mt-3 mb-3">
            <a asp-action="Maintenance_Tracking" asp-controller="MaintenanceTracking" class="btn btn-custom">Back to All Records</a>
        </div>
    }

    <!-- Schedule Maintenance Form -->
    <div class="card">
        <div class="card-header bg-primary text-white">Schedule Maintenance</div>
        <div class="card-body">
            <form asp-action="AddMaintenanceRecord" method="post">
                <div class="row mb-3">
                   <div class="col-md-6">
                        <label for="registrationNumber" class="form-label">Registration Number</label>
                        <input type="text" class="form-control" id="registrationNumber" name="RegistrationNumber" required />

                        @if (ViewData.ModelState["RegistrationNumber"]?.Errors.Count > 0)
                        {
                            <span class="text-danger">@ViewData.ModelState["RegistrationNumber"].Errors[0].ErrorMessage</span>
                        }
                   </div>
                    <div class="col-md-6">
                        <label for="scheduledDate" class="form-label">Scheduled Date</label>
                        <input type="date" class="form-control" id="scheduledDate" name="ScheduledDate" required />
                    </div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea class="form-control" id="description" name="Description" rows="3" required></textarea>
                </div>
                <button type="submit" class="btn btn-success">Schedule</button>
            </form>
        </div>
    </div>

    <!--Search Records-->
    <div class="card mb-5">
        

        <div class="card-body">
            <!-- Form for search -->
           <form method="post" asp-action="Maintenancesearch" asp-controller="MaintenanceTracking">
           <div class="input-group">
            <input type="text" class="form-control" id="searchRegistrationNumber" name="registrationNumber" placeholder="Enter Registration Number" required />
            <button type="submit" class="btn btn-outline-primary" id="searchBtn">Search</button>
           </div>
          </form>

            <!-- Results area -->
            <div id="fuelUsageResults">
                @if (ViewBag.HasRecords != null)
                {
                    if (ViewBag.HasRecords)
                    {
                        <table class="table table-bordered table-striped mt-3">
                            <thead>
                                <tr>
                                    <th>Vehicle ID</th>
                                    <th>Description</th>
                                    <th>Date</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Vehicle.RegistrationNumber</td>
                                        <td>@item.Description</td>
                                        <td>@item.ScheduledDate</td>
                                        <td>@item.Status</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="alert alert-danger mt-3">
                            No records found for the given Vehicle ID.
                        </div>
                    }
                }
            </div>
        </div>
    </div>
    <!-- Maintenance Records Table -->
     @if (ViewBag.SearchPerformed == null || ViewBag.SearchPerformed == false)
   {
    <div class="card ">
        <div class="card-header bg-secondary text-white">Maintenance Records</div>
        <div class="card-body">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Maintenance ID</th>
                        <th>Vehicle ID</th>
                        <th>Description</th>
                        <th>Scheduled Date</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.MaintenanceId</td>
                           <td>@item.Vehicle.RegistrationNumber</td>
                            <td>@item.Description</td>
                            <td>@item.ScheduledDate.ToString("dd-MM-yyyy")</td>
                            <td>@item.Status</td>
                            <td>
                                @if (item.Status == "Scheduled")
                                {
                                    <a asp-action="MarkAsComplete" asp-route-id="@item.MaintenanceId" class="btn btn-sm btn-success">Mark Completed</a>
                                }
                                <a asp-action="DeleteMaintenanceRecord" asp-route-id="@item.MaintenanceId" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <!-- Pagination Controls -->
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                            <a class="page-link" asp-action="Maintenance_Tracking" asp-route-page="@i">@i</a>
                        </li>
                    }s
                </ul>
            </nav>
        </div>
    </div>
   }
</div>
