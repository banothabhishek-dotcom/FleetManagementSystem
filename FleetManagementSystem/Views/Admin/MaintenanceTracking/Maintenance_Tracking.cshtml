@model List<FleetManagementSystem.Models.Maintenance_Management>

@{
    ViewData["Title"] = "Maintenance Tracking";
}

<head>
    <style>
        body {
            background-color: #f8f9fa;
        }

        .card {
            margin-top: 20px;
        }

        .btn-custom {
            background-color: #0d6efd;
            color: white;
        }

            .btn-custom:hover {
                background-color: #0b5ed7;
            }

        .pagination .active .page-link {
            background-color: #0d6efd;
            border-color: #0d6efd;
            color: white;
        }
    </style>
</head>

<div class="container">
    <h2 class="text-center mb-4">Maintenance Tracking</h2>
    @if (ViewBag.SearchPerformed == true)
    {
        <div class="text-start mt-3 mb-3">
            <a asp-action="Maintenance_Tracking" asp-controller="MaintenanceTracking" class="btn btn-custom">Back to All Records</a>
        </div>
    }

    <!-- Schedule Maintenance Form -->
    <div class="card">
        <div class="card-header bg-primary text-white">Schedule Maintenance</div>
        <div class="card-body">
            <form asp-action="AddMaintenanceRecord" method="post">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="vehicleId" class="form-label">Vehicle ID</label>
                        <input type="text" class="form-control" id="vehicleId" name="VehicleID" required /> 

                        @if (ViewData.ModelState["VehicleID"]?.Errors.Count > 0)
                        {
                            <span class="text-danger">@ViewData.ModelState["VehicleID"].Errors[0].ErrorMessage</span>
                        }


                    </div>
                    <div class="col-md-6">
                        <label for="scheduledDate" class="form-label">Scheduled Date</label>
                        <input type="date" class="form-control" id="scheduledDate" name="ScheduledDate" required />
                    </div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea class="form-control" id="description" name="Description" rows="3" required></textarea>
                </div>
                <button type="submit" class="btn btn-success">Schedule</button>
            </form>
        </div>
    </div>

    <!--Search Records-->
    <div class="card mb-5">
        

        <div class="card-body">
            <!-- Form for search -->
            <form method="post" asp-action="Maintenancesearch" asp-controller="MaintenanceTracking">
                <div class="input-group ">
                    <input type="number" class="form-control" id="searchVehicleId" name="vehicleId" placeholder="Enter Vehicle ID" required />
                    <button type="submit" class="btn btn-outline-primary" id="searchBtn">Search</button>
                </div>
            </form>

            <!-- Results area -->
            <div id="fuelUsageResults">
                @if (ViewBag.HasRecords != null)
                {
                    if (ViewBag.HasRecords)
                    {
                        <table class="table table-bordered table-striped mt-3">
                            <thead>
                                <tr>
                                    <th>Vehicle ID</th>
                                    <th>Description</th>
                                    <th>Date</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.VehicleId</td>
                                        <td>@item.Description</td>
                                        <td>@item.ScheduledDate</td>
                                        <td>@item.Status</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="alert alert-danger mt-3">
                            No records found for the given Vehicle ID.
                        </div>
                    }
                }
            </div>
        </div>
    </div>
    <!-- Maintenance Records Table -->
     @if (ViewBag.SearchPerformed == null || ViewBag.SearchPerformed == false)
   {
    <div class="card ">
        <div class="card-header bg-secondary text-white">Maintenance Records</div>
        <div class="card-body">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Maintenance ID</th>
                        <th>Vehicle ID</th>
                        <th>Description</th>
                        <th>Scheduled Date</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.MaintenanceId</td>
                            <td>@item.VehicleId</td>
                            <td>@item.Description</td>
                            <td>@item.ScheduledDate.ToString("dd-MM-yyyy")</td>
                            <td>@item.Status</td>
                            <td>
                                @if (item.Status == "Scheduled")
                                {
                                    <a asp-action="MarkAsComplete" asp-route-id="@item.MaintenanceId" class="btn btn-sm btn-success">Mark Completed</a>
                                }
                                <a asp-action="DeleteMaintenanceRecord" asp-route-id="@item.MaintenanceId" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <!-- Pagination Controls -->
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                            <a class="page-link" asp-action="Maintenance_Tracking" asp-route-page="@i">@i</a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    </div>
   }
</div>
