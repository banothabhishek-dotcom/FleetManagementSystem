@{
}

@{
    ViewData["Title"] = "Performance Analysis";
}
@model FleetManagementSystem.Models.Performance_Analysis

<div class="bg-light">

    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Admin" asp-action="AdminPage" id="logo">Fleetora</a>
            <a class="navbar-brand" href="/landing/landing.html">Fleetora</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                    aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
        <div class="collapse navbar-collapse" id="navbarContent">
            <div class="me-5">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <button type="button" class="btn btn-dark" title="Logout">
                            <i class="fas fa-user fa-lg"></i>
                        </button>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="text-start mt-3 ms-3">
        <a asp-controller="Admin" asp-action="AdminPage" type="back" class="btn btn-custom">Back</a>
    </div>

    <div class="container" id="dashboard">
        <h2 class="my-4 text-center">📊 Fleet Performance Dashboard</h2>

        <div class="row mb-4">
            <div class="col-md-6">
                <label for="reportMonth" class="form-label">Select Month:</label>
                <select id="reportMonth" class="form-select">
                    <option selected>september</option>
                    <option>october</option>
                    <option>november</option>
                </select>
            </div>
            <div class="col-md-6">
                <label for="reportYear" class="form-label">Select Year:</label>
                <select id="reportYear" class="form-select">
                    <option selected>2025</option>
                    <option>2024</option>
                    <option>2023</option>
                </select>
            </div>
        </div>

        <div class="row g-3">
            <div class="col-md-3">
                <div class="card p-3 text-center shadow">
                    <h5>Total Trips This Year</h5>
                    <p class="fs-4 text-primary">@Model.TotalTrips</p>
                </div>
            </div>
        </div>

        <div class="text-start mt-4">
            <img src="data:image/png;base64,@ViewBag.ChartImage" alt="Accepted Trips Chart" class="img-fluid" />
        </div>

        <div class="mt-5">
            <h4>📈 Utilization vs Downtime</h4>
            <div class="card">
                <div class="row">
                    <div class="small-chart text-center col">
                        <img src="/assets/image.png" alt="" class="img-fluid" style="width: auto;height: auto;">
                    </div>
                    <div class="small-chart text-center col">
                        <img src="/assets/piechart.png" alt="" class="img-fluid" style="width: 350px;height: 350px;">
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-4">
            <button class="btn btn-primary">⬇ Download Report (PDF)</button>
        </div>
    </div>
</div>