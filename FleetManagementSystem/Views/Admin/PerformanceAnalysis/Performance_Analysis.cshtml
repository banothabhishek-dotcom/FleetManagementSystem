        <div class="row mb-4">
            <div class="col-md-6">
                <label for="reportMonth" class="form-label">Select Month:</label>
                <select id="reportMonth" class="form-select">
                    <option selected>August</option>
                    <option>July</option>
                    <option>June</option>
                </select>
            </div>
            <div class="col-md-6">
                <label for="reportYear" class="form-label">Select Year:</label>
                <select id="reportYear" class="form-select">
                    <option selected>2025</option>
                    <option>2024</option>
                    <option>2023</option>
                </select>
            </div>
        </div>


        <!-- Dashboard Cards -->
        <div class="row g-3">
            <div class="col-md-3">
                <div class="card p-3 text-center shadow">
                    <h5>Total Trips</h5>
                    <p class="fs-4 text-primary">128</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card p-3 text-center shadow">
                    <h5>Fuel Efficiency</h5>
                    <p class="fs-4 text-success">14.2 km/l</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card p-3 text-center shadow">
                    <h5>Utilization</h5>
                    <p class="fs-4 text-warning">76%</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card p-3 text-center shadow">
                    <h5>Downtime</h5>
                    <p class="fs-4 text-danger">12 hrs</p>
                </div>
            </div>
        </div>

        <!-- Static Chart Image -->
        <div class="mt-5">
            <h4>📈 Utilization vs Downtime</h4>
            <div class="card ">
                <div class="row">
                    <div class="small-chart text-center col">
                        <img src="/assets/image.png" alt="" class="img-fluid" style="width: auto;height: auto;">
                    </div>
                    <div class="small-chart text-center col">
                        <img src="/assets/piechart.png" alt="" class="img-fluid" style="width: 350px;height: 350px;">
                    </div>
                </div>
            </div>
        </div>

        <!-- Download Button -->
        <div class="mt-4">
            <button class="btn btn-primary">⬇ Download Report (PDF)</button>
        </div>
    </div>


</div>

