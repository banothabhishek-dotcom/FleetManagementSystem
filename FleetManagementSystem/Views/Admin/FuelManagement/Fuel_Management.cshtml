@model List<FleetManagementSystem.Models.Fuel_Management>

@{

ViewData["Title"] = "Fuel_Management";

}

<head>


    <style>
        body {

            background-color: #f8f9fa;

        }

        .card {

            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);

        }

        .header-title {

            font-weight: 600;

            color: #343a40;

            text-shadow: 2px 2px 6px rgba(0, 0, 0, 0.4);

        }

        .btn-custom {

            background-color: #0d6efd;

            color: white;

        }

        .btn-custom:hover {

            background-color: #0b5ed7;

        }

        .btn-custom:hover {

            background-color: #0b5ed7;

        }
        .dropdown:hover .dropdown-menu {
        display: block;
        margin-top: 0;
        }
 
    .dropdown-menu {
        min-width: 140px;
        right: 0;
        left: auto;
    }
    </style>
</head>

<div>
    <nav id="navBar" class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Admin" asp-action="AdminPage" id="logo">Fleetora</a>

            <!-- Toggler added here -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
      
        <div class="dropdown">
            <a class="nav-link mx-2 text-white" style="cursor: pointer;">
            <i class="fa-solid fa-user"></i>
            </a>
            <ul class="dropdown-menu dropdown-menu-end">
            <li>
            <form asp-controller="FuelManagement" asp-action="Logout" method="post" class="dropdown-item p-0">
            <button type="submit" class="btn text-danger w-100 text-start">
            <i class="fa-solid fa-right-from-bracket me-2"></i> Logout
            </button>
            </form>
            </li>
            </ul>
       </div>
    </nav>

    <div class="text-start mt-3 ms-3">
        <a asp-controller="Admin" asp-action="AdminPage" type="back" class="btn btn-custom">Back</a>
    </div>
    <div class="container ">
        <h2 class="mb-7 text-center header-title">
            <medium>Fuel Management</medium>
        </h2>
        <!-- Add button  -->
        <div class="d-flex justify-content-end align-items-center mb-3">
            <a asp-controller="FuelManagement" asp-action="AddFuelEntries" class="btn btn-custom">
                <i class="fas fa-plus"></i> Add
            </a>
        </div>
        
            @if (ViewBag.SearchPerformed == true)
            {
                <div class="text-start mt-3 mb-3">
                   <a  asp-action="Fuel_Management" asp-controller="FuelManagement" class="btn btn-custom">Back to All Records</a>
                </div>
            }

        <!-- View Fuel Usage -->
    <div class="card mb-5">
        <div class="card-header bg-primary text-white">View Fuel Usage</div>
 
        <div class="card-body">
            <!-- Form for search -->

            <form method="post" asp-action="Fuelsearch" asp-controller="FuelManagement">
                <div class="input-group mb-3">
                   <input type="text" class="form-control" id="searchRegistration" name="registrationNumber" placeholder="Enter Vehicle Registration Number"  />
                    <button type="submit" class="btn btn-outline-primary" id="searchBtn">Search</button>
                </div>
            </form>
 
            <!-- Results area -->
            <div id="fuelUsageResults">
                @if (ViewBag.HasRecords != null)
                {
                    if (ViewBag.HasRecords)
                    {
                        <table class="table table-bordered table-striped mt-3">
                            <thead>
                                <tr>
                                    <th>Vehicle Number</th>
                                    <th>Fuel Quantity</th>
                                    <th>Cost</th>
                                    <th>Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Vehicle?.RegistrationNumber</td>
                                        <td>@item.FuelQuantity</td>
                                        <td>@item.Cost</td>
                                        <td>@item.Date.ToString("dd-MM-yyyy")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="alert alert-danger mt-3">
                            No records found for the given Vehicle Registration Number.
                        </div>
                    }
                    
                        <form asp-action="Fuelsearch" asp-controller="FuelManagement" method="post">
                            <input type="hidden" name="registrationNumber" value="@ViewBag.SearchQuery" />
                            <nav aria-label="Page navigation">
                            <ul class="pagination justify-content-center">
                                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                                {
                                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                        <button type="submit" name="page" value="@i" class="page-link">@i</button>
                                    </li>
                                }
                            </ul>
                            </nav>
                        </form>
                   

                }
            </div>
        </div>
</div>

    <!-- Fuel Records Table -->
    @if (ViewBag.SearchPerformed == null || ViewBag.SearchPerformed == false)
   {
    <div class="card mt-4 mb-4">
        <div class="card-header bg-primary text-white">Fuel Records</div>
        <div class="card-body">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        
                        <th>Vehicle Number</th>
                        <th>Fuel Quantity(Liters)</th>
                        <th>Cost</th>
                        <th>Date</th>
                       
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            
                            <td>@item.Vehicle?.RegistrationNumber</td>
                            <td>@item.FuelQuantity</td>
                            <td>@item.Cost</td>
                            <td>@item.Date.ToString("dd-MM-yyyy")</td>
                            
                        </tr>
                    }
                </tbody>
            </table>
              <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                            <a class="page-link" asp-action="Fuel_Management" asp-route-page="@i">@i</a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    </div>
    }


    </div>

</div>