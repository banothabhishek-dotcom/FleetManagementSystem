@model List<FleetManagementSystem.Models.Trip_Scheduling>

@{
    Layout = "~/Views/Shared/_DriverLayout.cshtml";
    ViewData["Title"] = "History";
}

<link href="/css/DriverPage.css" rel="stylesheet" />
@* <h1 style="margin-top:100px;align-items:center">Ride History</h1> *@
<div style="margin-top:100px">
@if (Model != null && Model.Any())
{
    foreach (var trip in Model)
    {
        <div class="container">
            <div class="card shadow-lg rounded p-4 mt-2">
                @* <div class="close-btn" onclick="this.parentElement.style.display='none';">×</div> *@
                <h4 class="text-center mb-4 text-primary">PickUp Details</h4>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>Name:</strong> @trip.Firstname
                    </div>
                    <div class="col-md-6">
                        <strong>Phone Number:</strong> @trip.PhoneNumber
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <strong>Pickup Address:</strong> @trip.PickupPoint
                    </div>
                    <div class="col-md-6">
                        <strong>Drop Address:</strong> @trip.DropPoint
                    </div>
                </div>
                    <div class="row mt-2">
                        <div class="col-md-12">
                            <strong>Status:</strong> @trip.Status
                        </div>
                    </div>
            </div>
        </div>
    }
}
else
{
        <div class="container my-4">
            <div class="card shadow border-0">
                <div class="card-body text-center py-5">
                    <h4 class="text-muted">
                        <i class="fa-solid fa-truck-fast me-2"></i> No assigned trips available
                    </h4>
                    <p class="text-secondary">You haven't been assigned any trips yet. Please check back later.</p>
                    <a asp-action="DriverPage" asp-controller="Driver" class="btn btn-outline-primary mt-3">
                        Go to Home
                    </a>
                </div>
            </div>
        </div>

}
</div>