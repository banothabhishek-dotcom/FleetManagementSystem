<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"] - FleetManagementSystem</title>
    <meta charset="UTF-8" />

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />


    <!-- Font Awesome -->
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
          integrity="sha512-p1CmVQxv9l4VwTUfdnWPb+H8bWzwgIy2X+gL8NqMBx7x+1RaZkK8jce+hOb/e4ciImld8z6120+o4X13Y51hSA=="
          crossorigin="anonymous"
          referrerpolicy="no-referrer" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="../landing/landing.html" style="cursor: pointer;">
                    <i class="fa-solid fa-truck"></i> Fleetora
                </a>
                <button class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#navbarNavAltMarkup"
                        aria-controls="navbarNavAltMarkup"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <div class="navbar-nav ms-auto">
                        <a class="nav-link mx-2 text-white" href="javascript:void(0);" onclick="navigateLink('fleetbooking','@Url.Action("CustomerPage", "Customer")')" style="cursor: pointer;">Book Fleet</a>
                        <a class="nav-link mx-2 text-white" asp-controller="Customer" asp-action="CustomerHistory" style="cursor: pointer;">History</a>
                        <a class="nav-link mx-2 text-white" asp-controller="Customer" asp-action="CustomerProfile" style="cursor: pointer;">
                            <i class="fa-solid fa-user"></i>
                        </a>
                    </div>
                </div>
            </div>
        </nav>

        <script>
            function navigateLink(sectionId,pageUrl){
              if(document.getElementById(sectionId)){
                document.getElementById(sectionId).scrollIntoView({
                  behavior:'smooth'
                })
              }
              else{
                window.location.href=pageUrl;
              }
            }
        </script>
    </header>
    <div>
        @RenderBody()
    </div>
    @Html.Partial("_Footer")

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
