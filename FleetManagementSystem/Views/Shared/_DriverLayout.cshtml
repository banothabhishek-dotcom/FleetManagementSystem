<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"] - FleetManagementSystem</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        .dropdown:hover .dropdown-menu {
            display: block;
            margin-top: 0;
        }

        .dropdown-menu {
            min-width: 140px;
            right: 0;
            left: auto;
        }</style>
</head>
<body>
    <nav class="navbar navbar-expand-lg fixed-top  p-0 navbar-dark bg-dark px-3">
        <a class="navbar-brand my-2 text-white" asp-controller="Driver" asp-action="DriverPage"><i class="fa-solid fa-truck"></i> Fleetora</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mynavbar"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-end me-4" id="mynavbar">
            <ul class="navbar-nav ">
                <li class="nav-item mx-2 ">
                    <a class="nav-link btn " asp-controller="Driver" asp-action="DriverPage">Home</a>
                </li>
                <li class="nav-item  mx-2">
                    <a class="nav-link btn " asp-controller="Driver" asp-action="DriverHistory">History</a>
                </li>
            </ul>
            <div class="dropdown">
                <a class="nav-link mx-2 text-white" asp-controller="Driver" asp-action="DriverProfile" style="cursor: pointer;">
                    <i class="fa-solid fa-user"></i>
                </a>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li class="">
                        <form asp-controller="Driver" asp-action="Logout" method="post" class="dropdown-item p-0">
                            <button type="submit" class="btn text-danger w-100 text-start">
                                <i class="fa-solid fa-right-from-bracket me-2"></i> Logout
                            </button>
                        </form>
                    </li>
                </ul>
            </div>


        </div>
    </nav>
    <div>
        @RenderBody()
    </div>
    @Html.Partial("_Footer")


    @* <script src="~/lib/jquery/dist/jquery.min.js"></script> *@
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
